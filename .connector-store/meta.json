                        {
                            "name": "overwriteBody",
                            "type": "checkbox",
                            "required": false,
                            "defaultValue": "false",
                            "description": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable)."
                        }
                    ],
                    "isHidden": false
                }
