                    "params": [
                        {
                            "name": "configRef",
                            "type": "connection",
                            "required": true,
                            "defaultValue": "",
                            "description": "Connection to be used"
                        },
                        {
                            "name": "contentFormat",
                            "type": "combo",
                            "required": true,
                            "defaultValue": "Data URI",
                            "description": "Select the format of the content to be scanned. Choose 'Data URI' for complete data URI strings (e.g., data:image/png;base64,iVBORw0...) or 'Base64' for raw base64 encoded content only."
                        },
                        {
                            "name": "mimeType",
                            "type": "stringOrExpression",
                            "required": false,
                            "defaultValue": "",
                            "description": "Specify the MIME type of the content to be scanned. This field only applies when contentFormat is set to 'Base64'. Allowed values are: image/png, image/jpeg, image/gif, image/webp, application/pdf"
                        },
                        {
                            "name": "fileContent",
                            "type": "stringOrExpression",
                            "required": true,
                            "defaultValue": "",
                            "description": "Provide the document or image content to be processed by AI. This can be either a complete Data URI string (including MIME type and base64 data) or raw base64 encoded content, depending on the selected Content Format."
                        },
                        {
                            "name": "idpSchema",
                            "type": "idpSchemaGenerateView",
                            "required": true,
                            "defaultValue": "",
                            "description": "Define the output schema for extracting the content from the documents."
                        },
                        {
                            "name": "maxTokens",
                            "type": "stringOrExpression",
                            "required": false,
                            "defaultValue": "4096",
                            "description": "The maximum number of tokens that can be used to generate the output response."
                        },
                        {
                            "name": "responseVariable",
